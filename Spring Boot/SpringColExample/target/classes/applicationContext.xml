<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="course" class="com.anudip.col.entity.Course">
		<constructor-arg name="cname" value="Java"></constructor-arg>
		<constructor-arg name="duration" value="460"></constructor-arg>
		<constructor-arg name="trainer" value="Amitava Sir"></constructor-arg>
		
		<constructor-arg><list>
		<value>Arnab</value>
		<value>Rahul</value>
		<value>Priya</value>
		<value>John</value>
		</list></constructor-arg>
	</bean>
</beans>